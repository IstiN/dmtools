<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
    <Appenders>
        <!-- Null appender - discards all logs -->
        <Null name="NullAppender"/>
    </Appenders>
    
    <Loggers>
        <!-- Completely suppress all logging for CLI usage -->
        <Logger name="com.github.istin.dmtools" level="OFF" additivity="false">
            <AppenderRef ref="NullAppender"/>
        </Logger>
        
        <!-- Suppress third-party logging -->
        <Logger name="org.apache" level="OFF" additivity="false">
            <AppenderRef ref="NullAppender"/>
        </Logger>
        
        <Logger name="okhttp3" level="OFF" additivity="false">
            <AppenderRef ref="NullAppender"/>
        </Logger>
        
        <Logger name="okio" level="OFF" additivity="false">
            <AppenderRef ref="NullAppender"/>
        </Logger>
        
        <!-- Root logger set to OFF -->
        <Root level="OFF">
            <AppenderRef ref="NullAppender"/>
        </Root>
    </Loggers>
</Configuration>
