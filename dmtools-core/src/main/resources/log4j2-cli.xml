<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console appender for errors only -->
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
    </Appenders>
    
    <Loggers>
        <!-- Suppress all logging for CLI usage -->
        <Logger name="com.github.istin.dmtools" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- Suppress third-party logging -->
        <Logger name="org.apache" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <Logger name="okhttp3" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- Root logger set to ERROR -->
        <Root level="ERROR">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
