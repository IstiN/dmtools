{
  "type": "openai",
  "displayNameKey": "integration.openai.displayName",
  "descriptionKey": "integration.openai.description",
  "iconUrl": "/img/integrations/openai-icon.svg",
  "categories": ["AI"],
  "setupDocumentation": {
    "en": "/docs/integrations/openai_setup_en.md",
    "ru": "/docs/integrations/openai_setup_ru.md"
  },
  "configParams": [
    {
      "key": "OPEN_AI_API_KEY",
      "displayNameKey": "openai.apiKey.displayName",
      "descriptionKey": "openai.apiKey.description",
      "instructionsKey": "openai.apiKey.instructions",
      "required": true,
      "sensitive": true,
      "inputType": "password",
      "defaultValue": null,
      "validation": {
        "pattern": "^sk-[a-zA-Z0-9]{48}$"
      }
    },
    {
      "key": "OPEN_AI_BATH_PATH",
      "displayNameKey": "openai.basePath.displayName",
      "descriptionKey": "openai.basePath.description",
      "instructionsKey": "openai.basePath.instructions",
      "required": false,
      "sensitive": false,
      "inputType": "url",
      "defaultValue": "https://api.openai.com/v1",
      "validation": {
        "pattern": "^https?://.*"
      }
    },
    {
      "key": "OPEN_AI_MODEL",
      "displayNameKey": "openai.model.displayName",
      "descriptionKey": "openai.model.description",
      "instructionsKey": "openai.model.instructions",
      "required": false,
      "sensitive": false,
      "inputType": "string",
      "defaultValue": "gpt-4"
    },
    {
      "key": "CODE_AI_MODEL",
      "displayNameKey": "openai.codeModel.displayName",
      "descriptionKey": "openai.codeModel.description",
      "instructionsKey": "openai.codeModel.instructions",
      "required": false,
      "sensitive": false,
      "inputType": "string",
      "defaultValue": null
    },
    {
      "key": "TEST_AI_MODEL",
      "displayNameKey": "openai.testModel.displayName",
      "descriptionKey": "openai.testModel.description",
      "instructionsKey": "openai.testModel.instructions",
      "required": false,
      "sensitive": false,
      "inputType": "string",
      "defaultValue": null
    }
  ]
} 